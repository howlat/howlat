- content_for :header, "Sign in"
.row
  .col-md-6
    .panel.panel-info
      .panel-heading
        %h4 Use your credentials
      .panel-body
        = simple_form_for(:session, url: sessions_path, html: {class: 'form-vertical' }) do |f|
          = f.input :email, autofocus: true, input_html: { value: session[:email] }
          = f.input :password
          = f.input :remember_me, as: :boolean, inline_label: 'Remember me', label: false
          .form-group
            .form-inline
              = f.button :submit, "Sign in", :class => 'btn-primary'
              = link_to "Forgot Password?", new_password_reset_path, class: 'btn'
  .col-md-6
    .panel.panel-info
      .panel-heading
        %h4 Use 3rd party account
      .panel-body
        - Identity.supported.each do |identity|
          %p= link_to "Login with #{identity.provider_name}", "auth/#{identity.provider}", class: 'btn btn-primary'

