(function() {
<%- if @member_params.include?(:title) %>
  $("#member-<%= @member.id %>-title").text("<%= @member.title %>");
  var modal = $("#title-modal-for-<%= @member.id %>");
  modal.find(".progress").hide();
  modal.find('form .form-inputs').show();
  modal.modal('hide');
<%- elsif @member_params.include?(:role_id) %>
  $("#member-<%= @member.id %>-role_id").text("<%= @member.role.name %>");
  $("#member-<%= @member.id %>-role_id").toggleClass('label-info');
  var form = $("#edit_member_<%= @member.id %>_role_id")
  <%- if @member.member? %>
    form.find("input[type='submit']").val("Promote to admin")
    form.find("input[name='member[role_id]']").val("<%= Role.admin.id %>")
  <%- else %>
    form.find("input[type='submit']").val("Set as member")
    form.find("input[name='member[role_id]']").val("<%= Role.member.id %>")
  <%- end %>
<%- end %>
})();
